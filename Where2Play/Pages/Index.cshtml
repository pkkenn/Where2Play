@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="hero-section">
    <h1 class="hero-title">Find Your Next Stage</h1>
    <p class="lead mb-4">Discover the best cities, venues, and audiences using real performance data.</p>
    
    <form action="/CitySearch" method="get" class="hero-search">
        <input type="text" name="query" placeholder="Enter an Artist or City name..." required>
        <button type="submit">Search</button>
    </form>

    <div class="mt-3">
        <a href="/swagger" class="btn btn-secondary">Open API Docs (Swagger)</a>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <div class="feature-icon"><i class="fas fa-city"></i></div>
                <h3>Search by City</h3>
                <p>Explore historical concert activity and find where fans are actually showing up.</p>
                <a href="/CitySearch" class="btn btn-outline-primary">Search Cities</a>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <div class="feature-icon"><i class="fas fa-users"></i></div>
                <h3>Similar Artists</h3>
                <p>Discover artists with matching genres to see where they are touring successfully.</p>
                <a href="/SimilarArtists" class="btn btn-outline-primary">Compare Artists</a>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <div class="feature-icon"><i class="fas fa-chart-line"></i></div>
                <h3>City Ratings</h3>
                <p>Get data-backed suggestions for which cities will give you the highest ROI.</p>
                <a href="/CityRating" class="btn btn-outline-primary">View Ratings</a>
            </div>
        </div>
    </div>
</div>

<div class="container text-center mt-5 mb-5 opacity-75 powered-by">
    <p class="small text-uppercase fw-bold">Powered by Real-Time Data From</p>
    <div class="d-flex justify-content-center gap-5 fs-4">
        
        <span title="Setlist.fm API">
            <i class="fas fa-list-ul"></i> <i class="fas fa-guitar"></i> Setlist.fm
        </span>

        <span title="MusicBrainz API">
            <i class="fas fa-music"></i> <i class="fas fa-brain"></i> MusicBrainz
        </span>

    </div>
</div>

