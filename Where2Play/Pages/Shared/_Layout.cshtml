<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Where2Play</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

@{
        // Robust check for landing page to apply different layout rules
        var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
        bool isLanding = string.Equals(currentPage, "/Index", StringComparison.OrdinalIgnoreCase)
                                    || string.IsNullOrEmpty(currentPage);
}

<body class="@(isLanding ? "page-landing" : "page-inner")" data-page="@currentPage">
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm box-shadow mb-3 @(isLanding ? "navbar-landing" : "bg-white")">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="fas fa-compass"></i> Where2Play
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/CitySearch">City Search</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/CityRating">Ratings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/SimilarArtists" title="Find similar artists">Similar Artists</a>
                        </li>
                    </ul>

                    <div class="d-lg-none mt-2 pb-2 border-top pt-2">
                        <button class="btn btn-sm w-100 theme-toggle-btn" aria-pressed="false">
                            <i class="fas fa-moon"></i> <span>Dark Mode</span>
                        </button>
                    </div>
                </div>

                <div class="d-none d-lg-block ms-3">
                    <button class="btn btn-sm theme-toggle-btn" aria-pressed="false" aria-label="Toggle dark mode">
                        <i class="fas fa-moon"></i> <span>Dark Mode</span>
                    </button>
                </div>
            </div>
        </nav>
    </header>

    <div class="@(isLanding ? "container-fluid p-0" : "container")">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 pt-3 text-center">
        <div class="container">
            &copy; 2025 - Where2Play
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>