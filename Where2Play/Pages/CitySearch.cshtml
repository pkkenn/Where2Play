@page
@model Where2Play.Pages.SearchModel
@{
    ViewData["Title"] = "Concert Search";
}

<h1>Smart Concert Booker</h1>
<p>Find concerts by city or artist!</p>

<form method="post" class="mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-auto">
            <label asp-for="SearchType" class="form-label">Search Type</label>
            <select asp-for="SearchType" class="form-select">
                <option value="City">City</option>
                <option value="Artist">Artist</option>
            </select>
        </div>
        <div class="col">
            <label asp-for="SearchText" class="form-label">Enter Name</label>
            <input asp-for="SearchText" class="form-control" placeholder="City or Artist" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mt-4">Search</button>
        </div>
    </div>
</form>

<hr />

@if (!Model.HasSearched)
{
    <div class="alert alert-info">
        Enter a city name above and click Search.
    </div>
}
else if (Model.FinalResults == null || !Model.FinalResults.Any())
{
    <h3>Results</h3>
    <div class="alert alert-warning">
        No concerts found for "@Model.SearchText". Try another city.
    </div>
}
else
{
    <h3>Results</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Artist</th>
                <th>Venue</th>
                <th>City</th>
                <th>Date</th>
                <th>Country</th>
                <th>Popularity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model.FinalResults)
            {
                <tr>
                    <td>@result.ArtistName</td>
                    <td>@result.Venue</td>
                    <td>@result.City</td>
                    <td>@(result.Date?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                    <td>@result.Country</td>
                    <td>@result.Popularity</td>
                </tr>
            }
        </tbody>
    </table>
}
