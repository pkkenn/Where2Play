@page
@model Where2Play.Pages.SearchModel
@{
    ViewData["Title"] = "Concert Search";
}

<h1>Smart Concert Booker</h1>

<form method="post" class="mb-3">
    <div class="row g-2 align-items-end">
        <div class="col">
            <label asp-for="SearchText" class="form-label">Search (City or Artist)</label>
            <input asp-for="SearchText" class="form-control" placeholder="City or Artist" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mt-4">Search</button>
        </div>
    </div>
</form>

<hr />

<h3>Results</h3>

@if (Model.PagedResults == null || !Model.PagedResults.Any())
{
    <p>No results found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Artist</th>
                <th>Venue</th>
                <th>City</th>
                <th>Date</th>
                <th>Genre</th>
                <th>Popularity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model.PagedResults)
            {
                <tr>
                    <td>@result.ArtistName</td>
                    <td>@result.Venue</td>
                    <td>@result.City</td>
                    <td>@(result.Date?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                    <td>@result.Genre</td>
                    <td>@result.Popularity</td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.HasMore)
    {
        <form method="get">
            <input type="hidden" name="q" value="@Model.SearchText" />
            <input type="hidden" name="page" value="@(Model.Page + 1)" />
            <button type="submit" class="btn btn-outline-secondary">Load more</button>
        </form>
    }
}
